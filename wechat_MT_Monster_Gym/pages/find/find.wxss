/* home.wxss */
.container {
  background-color: #F2f2f2;
  background-size:100% auto;
  min-height: 100%;
  justify-content:space-between;
  align-items: center;
}
.swiper-container{
  width: 750rpx;
  position: relative;  
}

swiper-item image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

swiper-item {
  width: 100%;
  height: 100%;
}

.swiper-item-coach {
  width:200rpx;
  display: inline-block;
  overflow: hidden;
  height:200rpx;
  border-radius: 50%;
  justify-content: center;
}

.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}

.container .list-title{
    font-size: 28rpx;
    color: #000;
    padding: 30rpx 0 25rpx 30rpx;
}

.zan-cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 10px;
}

.zan-cell::after {
  position: absolute;
  left: 15px;
  right: 0;
  bottom: 0;
  border-top: 1rpx solid #e5e5e5;
  background: #e5e5e5;
  content: ' ';
}
.zan-cell__bd {
  flex: 1;
  color: #e64340;
}
.zan-cell__ft {
  position: relative;
  text-align: right;
  color: #666;
}

.zan-panel {
  background: #fff;
  /*border-top: 1rpx solid #e5e5e5;*/
  border-bottom: 1rpx solid #e5e5e5;
  overflow: hidden;
  margin-bottom:10px;
  width:100%;
  height:auto;
  border-radius:10rpx;
}

.zan-font-10 {
  position: relative;
  padding: 6px 15px;
  display: flex;
  align-items: center;
  font-size: 10px;
}

.zan-font-12-bold {
  position: relative;
  padding: 6px 15px;
  display: flex;
  align-items: center;
  font-size: 12px;
  font-weight:bold;
  flex-direction: row;
  text-align: center;
  margin:0 10%;
}

.img-box{
    overflow: hidden;
}

.img-box .img{
    width: 30rpx;
    height:30rpx;
}
.img-box .imgvideo{
    width: 30rpx;
    height:20rpx;
}
.coach{
  align-items: center;
  margin: 10px 0px;
  background: #fff;
  padding: 0 35% 0 35%;
}

.zan-cell--access .zan-cell__ft {
  padding-right: 13px;
}

.zan-cell--access .zan-cell__ft::after {
  position: absolute;
  top: 50%;
  right: 2px;
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.envimg{
  width: 100%;
  height: 180px;
  padding-bottom: 7px;
}

.envimg image{
  width: 100%;
  height: 100%;
  display:inline-block;
  overflow:hidden;
}



.footaboutme {
  background-color: #F2f2f2;
  text-align: center;
  color: #ccc;
  font-size: 10px;
}

.le-img {
  width: 100%;
  display: block;
  transform: scale(0.8);
  transition: all 0.3s ease;
  border-radius: 6px;
}
.le-img.le-active {
  transform: scale(1);
}
